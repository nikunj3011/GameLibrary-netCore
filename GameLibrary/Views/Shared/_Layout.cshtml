<html>
<head>
    <meta charset="utf-8" />
    <title>Game Library</title>

    <link href="~/node_modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/node_modules/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    @*<link rel="stylesheet" href="css/style.css">*@
</head>
<body>
    <header class="container">
        <nav class="navbar navbar-dark bg-dark navbar-expand-md">
            <h1 class="navbar-brand"><i class="fa fa-paint-brush"></i> Welcome to Game Library</h1>
            <button class="navbar-toggler" data-toggle="collapse" data-target="#theMenu">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div id="theMenu" class="navbar-collapse collapse">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="App" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="GameSystems" asp-action="Index">Game Systems</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Libraries" asp-action="Index">Game Library</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="GameShops" asp-action="Index">Game Shops</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="App" asp-action="Contact">Contact</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="App" asp-action="AboutUs">About</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <br/>
    @*<section class="container">
        <h2 class="text-center">@ViewBag.Title</h2>
    </section>*@
<div class="container">
    <h2 class="text-center">@ViewBag.Title</h2>
    @RenderBody()
    <div class="row">
        <div class="col-md-6">
            
        </div>
        <div class="col-md-6">
            
        </div>
    </div>
</div>
    <br/>
    <footer class="container">
        <div class="text-center">Copyright 2021 Game Library LLC</div>
    </footer>
    <script src="~/node_modules/jquery/dist/jquery.min.js"></script>
    <script src="~/node_modules/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/index.js"></script>
    @RenderSection("scripts", false)
</body>
</html>