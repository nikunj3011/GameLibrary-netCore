@model GameLibrary.Data.Entities.GameShop

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>GameShop</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GameShopName" class="control-label"></label>
                <input asp-for="GameShopName" class="form-control" />
                <span asp-validation-for="GameShopName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GameLibraryID" class="control-label"></label>
                <select asp-for="GameLibraryID" class ="form-control" asp-items="ViewBag.GameLibraryID"></select>
            </div>
            <div class="form-group">
                <label asp-for="GameSystemID" class="control-label"></label>
                <select asp-for="GameSystemID" class ="form-control" asp-items="ViewBag.GameSystemID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
